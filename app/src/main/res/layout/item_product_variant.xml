<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/item_product_variant_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5 кг"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_product_variant_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_product_variant_price" />

    <TextView
        android:id="@+id/item_product_variant_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Цена"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_product_variant_basket"
        app:layout_constraintEnd_toStartOf="@+id/item_product_variant_basket"
        app:layout_constraintTop_toTopOf="@+id/item_product_variant_basket" />

    <ImageButton
        android:id="@+id/item_product_variant_basket"
        android:layout_width="54dp"
        android:layout_height="32dp"
        android:background="@drawable/first_button_background"
        android:src="@drawable/ic_basket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>