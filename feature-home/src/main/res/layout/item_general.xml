<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#EAEBD7">

    <LinearLayout
        android:id="@+id/item_category_general_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/item_category_general_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/picture_dog"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/item_category_general_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Собаки"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_category_general_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250 товаров"
            android:textSize="14sp"
            android:textColor="#979797"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>